{%- do craft.eagerBeaver.eagerLoadElements(entry, [
    'contentBuilder',
    'contentBuilder.highlightCards:cards',
    'contentBuilder.sectionHeader',
    'contentBuilder.sectionHeader:buttons',
    'contentBuilder.singleImage:image',
    'contentBuilder.slide:image',
    'contentBuilder.galleryImages:images',
    'contentBuilder.resources:target',
    'contentBuilder.faqList:questions',
    'contentBuilder.faqList:questions.faqCategory',
    'author:profilePhoto',
    ])
%}

<article class="container max-w-screen-xl mx-auto">
    {%- minify -%}
        {%- for block in content.contentBuilder -%}
            {%- switch block.type -%}

                {%- case "article" -%}

                    {%- include '_molecules/content/content--article' ignore missing with {
                        content: block,
                    } -%}

                {%- case "standfirst" -%}

                    {%- include '_molecules/content/content--standfirst' ignore missing with {
                        content: block,
                    } -%}

                {%- case "blockQuote" -%}

                    {%- include '_molecules/quotes/quotes--block' ignore missing with {
                        content: block,
                    } -%}

                {%- case "sectionHeader" -%}

                    {%- include '_molecules/headers/header--section' ignore missing with {
                        content: block,
                        type: 'normal',
                    } -%}

                {%- case "basicSlider" -%}

                    {%- include '_molecules/sliders/slider--basic' ignore missing with {
                        content: block,
                    } -%}

                {%- case "singleImage" -%}

                    {%- include '_molecules/images/image--single' ignore missing with {
                        content: block,
                    } -%}

                {%- case "galleryImages" -%}
                    {%- include '_organisms/images/image--gallery' ignore missing with {
                        content: block,
                    } -%}

                {%- case "highlightCards" -%}

                    {%- include '_organisms/cards/cards--highlight' ignore missing with {
                        content: block,
                    } -%}

                {%- case "spotlightCards" -%}
                    {%- include '_organisms/cards/cards--spotlight' ignore missing with {
                        content: block,
                    } -%}

                {%- case "resourceList" -%}

                    {%- include '_organisms/lists/list--resources' ignore missing with {
                        content: block,
                    } -%}

                {%- case "faqList" -%}

                    {%- include '_organisms/lists/list--faq.twig' ignore missing with {
                        content: block,
                    } -%}

            {%- endswitch -%}

        {%- endfor -%}
    {%- endminify -%}

</article>
